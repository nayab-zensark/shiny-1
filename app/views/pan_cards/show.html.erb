<div class="background">
<center>
<div class="land2">
<h3>Pan Card Details</h3>
<% if @pan_card.profile_image.attached? %>
    <%= image_tag @pan_card.profile_image, style: "width:100px;height:100px" %>
<% end %>
<p> Name:<%= @pan_card.name %></p>
<p> pan No:<%= @pan_card.pan_no %></p>
<p> Gender:<%= @pan_card.gender %></p>

<%= link_to "Edit", edit_pan_card_path(@pan_card), class: "btn btn-primary" %>
<%= link_to "Back", pan_cards_path, class: "btn btn-primary" %>

<div>
<h5>Users</h5>
<% @userable.users.each do |user| %>
    <%= user.name %>
<% end %>
</div>

<p><%= link_to "New User", [:new, @userable, :user], class: "btn btn-secondary" %> </p>
</div>
</center>
</div>
