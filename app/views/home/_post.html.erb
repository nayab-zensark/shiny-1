<p>Add New Post:</p>
<%= form_for Post.new do |f| %>
    <div class="form-group">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>
    <div class="form-group">
    <%= f.label :post %><br />
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id, value: current_user.id %>
    </div>
    <br>
    <div class="text-center">
      <%= f.submit 'Create Post', class: 'btn btn-primary' %>
    </div>
<% end %>