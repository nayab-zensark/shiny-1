<%= render 'layouts/dash'%>
<div class="div">
  <div class="div1">
  <h1>Products</h1>
  
  <table class="table">
    <tr>
      <th>Product Name</th>
      <th>Product Details</th>
      <th>Product Cost</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to product.product_name, product %>
        </td>
        <td>
          <%= product.product_details %>
        </td>
        <td>
          <%= product.cost %>
        </td>
        <td>
          <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary btn-sm" %>
        </td>   
        <td>
          <%= link_to "Destroy", product_path(product), class: "btn btn-danger btn-sm", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
        </td>
      </tr>
    <% end %>
  </table>
  <center>
    <%= link_to "New", new_product_path(@product), class: "btn btn-secondary btn-sm" %>

  </center>
    
  </div>
</div>       


